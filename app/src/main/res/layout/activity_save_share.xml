<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <View
        android:id="@+id/top_status"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mcb_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="@string/share"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mcb_back"
        app:layout_constraintTop_toTopOf="@id/mcb_back"/>

    <ImageView
        android:id="@+id/mcb_right"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_home"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_status" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_share_platform"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent" />
<FrameLayout
    android:id="@+id/lr_iv_content"
    android:layout_marginTop="15dp"
    app:layout_constraintBottom_toTopOf="@id/recycler_share_platform"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/mcb_back"
    android:background="@color/grey300"
    android:layout_width="0dp"
    android:layout_height="0dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
</FrameLayout>

    <TextView
        android:id="@+id/save_success_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/txt_save_successful"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/lr_iv_content"
        app:layout_constraintBottom_toBottomOf="@id/lr_iv_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
  <RelativeLayout
      android:id="@+id/lr_clip_template"
      android:layout_marginTop="60dp"
      android:visibility="gone"
      app:layout_constraintTop_toBottomOf="@id/save_success_label"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/clip_btn"
        android:src="@drawable/icon_clip"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
      <TextView
          android:id="@+id/text_tip"
          android:layout_below="@id/clip_btn"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:layout_width="wrap_content"
          android:text="@string/clip2"
          android:layout_alignLeft="@id/clip_btn"
          android:layout_marginLeft="14dp"
          android:layout_marginTop="14dp"
          android:layout_height="wrap_content"/>
      <ImageView
          android:id="@+id/template_btn"
          android:src="@drawable/icon_template"
          android:layout_toRightOf="@id/clip_btn"
          android:layout_marginLeft="40dp"
          android:layout_width="60dp"
          android:layout_height="60dp"/>
      <TextView
          android:layout_below="@id/clip_btn"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:layout_width="wrap_content"
          android:text="@string/template"
          android:layout_alignLeft="@id/template_btn"
          android:layout_marginLeft="-10dp"
          android:layout_marginTop="14dp"
          android:layout_height="wrap_content"/>
  </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>