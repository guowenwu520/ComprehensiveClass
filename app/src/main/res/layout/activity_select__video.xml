<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".ui.SelectVideoActivity">
    <FrameLayout
        android:id="@+id/top_Layout"
        android:layout_width="match_parent"
        android:paddingTop="25dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/icon_back"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/select_sing_title"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="@string/video"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/select_more_title"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/select_more_all"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:text="@string/all"
                    android:textColor="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/select_more_selected"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="@string/selected"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_video_recycleview"
        app:layout_constraintTop_toBottomOf="@id/top_Layout"
        android:background="@color/grey100"
        app:layout_constraintBottom_toTopOf="@id/select_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/select_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp">
       <TextView
           android:id="@+id/text_tip"
           android:textColor="@color/grey600"
           android:layout_marginLeft="15dp"
           android:textSize="15sp"
           android:layout_centerVertical="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/select_determine"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_small"
            android:text="Select"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>